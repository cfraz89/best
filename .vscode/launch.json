  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'demo'",
      "cargo": {
        "args": ["build", "--bin=demo", "--package=demo"],
        "filter": {
          "name": "demo",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'demo'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=demo", "--package=demo"],
        "filter": {
          "name": "demo",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'demo-index'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=demo-index"],
        "filter": {
          "name": "demo-index",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'best-rs-lib'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=best-rs-lib"],
        "filter": {
          "name": "best-rs-lib",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
